---
import BlogCard from '@/components/BlogCard.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getAuthorById, getRecentPosts, getAllProjects } from '@/lib/data-utils'
import AuthorCard from '@/components/AuthorCard.astro'

const blog = await getRecentPosts(SITE.featuredPostCount)
const author = await getAuthorById('vitoesposito')
// Prendi i primi 3 progetti più recenti (già ordinati per startDate da getAllProjects)
const projects = (await getAllProjects()).slice(0, 3)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />

  <section>
    { author && <AuthorCard author={author} /> }

    <div class="prose mt-4">
      <p class="mt-0">
        <strong>Sviluppatore web</strong> e <strong>designer</strong> con una forte passione per l’informatica.
      </p>
      <p class="mt-0 mb-0">
        Esperto nella progettazione e sviluppo di interfacce web per sistemi complessi ed e-commerce, al momento impegnato nella formazione per lo sviluppo di <Link href="/blog/costruzione-di-cosmetico">Cosmetico</Link>.
      </p>
    </div>
  </section>


  <section class="flex flex-col gap-y-4">
    <div class="flex items-center justify-between">
      <h2 class="text-2xl font-medium">Gli ultimi post</h2>
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        Tutti i post<span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
  </section>

  {
    projects.length > 0 && (
      <section class="flex flex-col gap-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-medium">Gli ultimi progetti</h2>
          <Link
            href="/projects"
            class={buttonVariants({ variant: 'ghost' }) + ' group'}
          >
            Tutti i progetti<span
              class="ml-1.5 transition-transform group-hover:translate-x-1"
              >&rarr;</span
            >
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            projects.map((project) => (
              <li>
                <ProjectCard project={project} />
              </li>
            ))
          }
        </ul>
      </section>
    )
  }
</Layout>
