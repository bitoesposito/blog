---
import BlogCard from '@/components/BlogCard.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getAuthorById, getRecentPosts, getAllProjects } from '@/lib/data-utils'
import AuthorCard from '@/components/AuthorCard.astro'

const blog = await getRecentPosts(SITE.featuredPostCount)
const author = await getAuthorById('vitoesposito')
// Prendi i primi 3 progetti più recenti (già ordinati per startDate da getAllProjects)
const projects = (await getAllProjects()).slice(0, 3)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />

  <section>
    <h1 class="text-3xl font-medium mb-4">{SITE.title}</h1>
    { author && <AuthorCard author={author} /> }

    <div class="prose mt-4">
      <p class="mt-0 mb-0">
        Esperto nella progettazione e sviluppo di interfacce web per sistemi complessi ed e-commerce, al momento impegnato nella formazione per lo sviluppo di <Link href="/blog/costruzione-di-cosmetico">Cosmetico</Link>.
      </p>
    </div>
  </section>


  <section class="flex flex-col gap-y-4">
    <div class="flex items-center justify-between">
      <h2 class="text-2xl font-medium">Ultimi post</h2>
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        Tutti i post<span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
    <ul class="flex flex-col">
      {
        blog.map((post, index) => {
          const isFirst = index === 0
          const isLast = index === blog.length - 1
          const cardClass = `${isFirst ? 'rounded-tl-xl rounded-tr-xl' : 'rounded-t-none'} ${isLast ? 'rounded-bl-xl rounded-br-xl' : 'rounded-b-none'} ${!isFirst ? 'border-t-0 -mt-[1px]' : ''}`
          return (
            <li>
              <BlogCard entry={post} cardClass={cardClass} />
            </li>
          )
        })
      }
    </ul>
  </section>

  {
    projects.length > 0 && (
      <section class="flex flex-col gap-y-4">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-medium">Ultimi progetti</h2>
          <Link
            href="/projects"
            class={buttonVariants({ variant: 'ghost' }) + ' group'}
          >
            Tutti i progetti<span
              class="ml-1.5 transition-transform group-hover:translate-x-1"
              >&rarr;</span
            >
          </Link>
        </div>
        <ul class="flex flex-col">
          {
            projects.map((project, index) => {
              const isFirst = index === 0
              const isLast = index === projects.length - 1
              const cardClass = `${isFirst ? 'rounded-tl-xl rounded-tr-xl' : 'rounded-t-none'} ${isLast ? 'rounded-bl-xl rounded-br-xl' : 'rounded-b-none'} ${!isFirst ? 'border-t-0 -mt-[1px]' : ''}`
              return (
              <li>
                <ProjectCard project={project} cardClass={cardClass} />
              </li>
              )
            })
          }
        </ul>
      </section>
    )
  }
</Layout>
