---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'

---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Preventivi" />
  <Breadcrumbs items={[{ label: 'Preventivi', icon: 'lucide:file-text' }]} />

  <div class="flex min-h-[calc(100vh-18rem)] flex-col gap-y-8 items-center justify-center">
    <div class="text-center space-y-4">
      <h1 class="text-2xl font-semibold">Preventivi Privati</h1>
      <p class="text-muted-foreground">
        I preventivi sono accessibili solo tramite link diretto condiviso.
      </p>
    </div>
  </div>
</Layout>

