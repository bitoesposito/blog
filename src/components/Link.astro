---
import { cn } from '@/lib/utils'

interface Props {
  href: string
  external?: boolean
  class?: string
  underline?: boolean
  'aria-label'?: string
  [key: string]: any
}

const { href, external, class: className, underline, 'aria-label': ariaLabel, ...rest } = Astro.props
const finalAriaLabel = external && ariaLabel ? `${ariaLabel} (si apre in una nuova finestra)` : ariaLabel
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  rel={external ? 'noopener noreferrer' : undefined}
  aria-label={finalAriaLabel}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline &&
      'underline decoration-muted-foreground underline-offset-[3px] hover:decoration-foreground',
    className,
  )}
  {...rest}
>
  <slot />
  {external && !ariaLabel && (
    <span class="sr-only"> (si apre in una nuova finestra)</span>
  )}
</a>
